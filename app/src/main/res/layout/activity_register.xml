<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".Register">

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="241dp"
        android:layout_height="48dp"
        android:background="@drawable/curve"
        android:ems="10"
        android:fadingEdge="vertical"
        app:hintTextColor="#040303"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="236dp"
            android:layout_height="32dp"
            android:background="@drawable/curve"
            android:ems="10"
            android:hint="  Password"
            android:inputType="textPersonName"
            android:textColor="#070707"
            android:textColorHighlight="#0E0E0E"
            android:textColorHint="#545252"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/fullName"
        android:layout_width="238dp"
        android:layout_height="43dp"
        android:background="@drawable/curve"
        android:ems="10"
        android:fadingEdge="vertical"
        android:hint="  Full Name"
        android:inputType="textPersonName"
        android:textColor="#070707"
        android:textColorHighlight="#070000"
        android:textColorHint="#A3545252"
        android:textColorLink="#F3F0F0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.361" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:background="@drawable/curve"
        android:ems="10"
        android:hint="  Email"
        android:inputType="textPersonName"
        android:textColor="#070707"
        android:textColorHighlight="#9A120202"
        android:textColorHint="#BE545252"
        android:textColorLink="#F8F7F7"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.467" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:background="@drawable/curve"
        android:ems="10"
        android:hint="  Phone Number(Optional)"
        android:inputType="textPersonName"
        android:textColor="#070707"
        android:textColorHighlight="#56090101"
        android:textColorHint="#C1545252"
        android:textColorLink="#F3EBEB"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="282dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/new1" />

    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#43e97b"
        android:text="Already Registered ? Login here"
        android:textColor="#131414"
        android:textSize="22sp"
        app:fontFamily="@font/acme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="358dp"
        android:layout_height="51dp"
        android:background="@drawable/curve"
        android:text="Register"
        android:textColor="#171616"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <com.agrawalsuneet.dotsloader.loaders.LazyLoader
        android:id="@+id/progressBar"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_margin="3dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831"
        app:lazyloader_animDur="400"
        app:lazyloader_dotsDist="7dp"
        app:lazyloader_dotsRadius="8dp"
        app:lazyloader_firstDelayDur="150"
        app:lazyloader_firstDotColor="#101211"
        app:lazyloader_interpolator="@android:anim/decelerate_interpolator"
        app:lazyloader_secondDelayDur="300"
        app:lazyloader_secondDotColor="#EFECEC"
        app:lazyloader_thirdDotColor="#82E80C" />

</androidx.constraintlayout.widget.ConstraintLayout>


